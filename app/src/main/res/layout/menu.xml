<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/menu_road">

    <TextView
        android:id="@+id/menuTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MENU"
        android:textStyle="bold"
        android:textSize="32sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:textColor="@android:color/white"/>


    fastModeButton

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/fastModeButton"
        android:layout_width="192dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/menuTextView"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="395dp"
        android:layout_marginEnd="126dp"
        android:background="@android:color/white"
        android:text="FAST MODE"
        android:textSize="24sp"
        android:textStyle="bold" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/slowModeButton"
        android:layout_width="192dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/menuTextView"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="334dp"
        android:layout_marginEnd="126dp"
        android:background="@android:color/white"
        android:text="SLOW MODE"
        android:textSize="24sp"
        android:textStyle="bold" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/sensorModeButton"
        android:layout_width="192dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/menuTextView"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="468dp"
        android:layout_marginEnd="126dp"
        android:background="@android:color/white"
        android:text="SENSOR MODE"
        android:textSize="24sp"
        android:textStyle="bold" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/Leaderboard"
        android:layout_width="195dp"
        android:layout_height="59dp"
        android:layout_below="@+id/menuTextView"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="532dp"
        android:layout_marginEnd="126dp"
        android:background="@android:color/white"
        android:text="Leaderboard"
        android:textSize="24sp"
        android:textStyle="bold" />

